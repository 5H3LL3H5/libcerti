#! /bin/sh
# CERTI myconf
# $Id: myconf,v 3.5 2004/03/04 20:02:03 breholee Exp $

case $1 in
    sun)
	echo Sun Workshop configuration ;
	CC=cc ;
	CXX=CC ;
#	AR=CC ;
	CXXFLAGS=" -g " ;
#	AR_FLAGS=$CXXFLAGS" -xar -o" ;
	export CC CXX AR CXXFLAGS LDFLAGS AR_FLAGS
	;;

    sun-gcc) 
	echo Sun / GCC configuration ;
	CXXFLAGS=" -Wall " 
	export CXXFLAGS
	;;

    linux) 
	echo GNU/Linux / GCC configuration ;
	CXXFLAGS=" -W -Wall -ansi -Woverloaded-virtual -Wno-unused-function" ;
	export CXXFLAGS
	;;

    hpux)
        echo HPUX / aCC configuration
	CC=cc ;
        CXX=aCC ;
        export CC CXX
	;;

    hpux-gcc)
        echo HPUX / GCC configuration  
        CC=gcc ;
        CXX=g++ ;
        export CC CXX
	;;
    *)
	echo --- WARNING: Default installation ---
	;;
esac

./configure --prefix=$HOME/CERTI $2 $3 $4 $5

# $Id: myconf,v 3.5 2004/03/04 20:02:03 breholee Exp $
